<div class="container mt-3">
<p id="notice"><%= notice %></p>

<h1>Meetings</h1>

<table>
  <thead>
    <tr>
      <th>Meetingdate</th>
      <th>Title</th>
      <th>Data</th>
      <th>Log person</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.meetingdate.strftime(t('date.formats.default')) if meeting.meetingdate.present? %></td>
        <td><%= meeting.title %></td>
        <td><%= meeting.data %></td>
        <td><%= meeting.logperson.name if meeting.logperson.present? %></td>
        <td><%= meeting.project.name if meeting.project.present? %></td>
        <td> 
          <div><%= link_to 'Show', meeting %></div>
          <div><%= link_to 'Edit', edit_meeting_path(meeting) %></div>
          <div><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meeting', new_meeting_path %>
</div>
