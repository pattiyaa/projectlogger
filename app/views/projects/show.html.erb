<div class="container mt-3 headertitle">
  <p id="notice"><%= notice %></p>
  <header>
  <% if @project.projectmanager == current_user %>
  <%= link_to 'Edit', edit_project_path(@project) %> |
  <%= link_to 'Back', projects_path %>
  <% end%>
    <div class="content">
      <h2>
        <%= @project.name %>
      </h2>
      <p>
        <%= @project.detail %>
      </p>
    </div>
    <div class="row small">
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div>
          <strong>Duration:</strong>  
          <%= @project.start_date.strftime(t('date.formats.default')) %> to <%= @project.end_date.strftime(t('date.formats.default'))  %>
         
        </div>
        <div>
          <strong>Project manager:</strong> <%= @project.projectmanager.name if @project.projectmanager.present?%>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div><strong>Client:</strong> <%= @project.client.name if @project.client.present? %> </div>
        <div><strong>Location:</strong> <%= @project.client.address if @project.client.present? %></div> 
      </div>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div><strong>Contact person:</strong>
          <%= @project.client.contactperson if @project.client.present? %>
        </div> 
        <div><strong>Telephone:</strong>
          <%= @project.client.telephone if @project.client.present? %>

        </div> 
        <div><strong>email:</strong>
          <%= @project.client.email if @project.client.present? %>
        </div>
      </div>
    </div>
  </header>
  <div class="three">
    <h2>Members</h2>
    <%= render  'colleagues/list'  ,colleagues: @project.users%>
  </div>
</div>
<section id="meeting" class="two">
    <div class="container">
    <h4>Meeting</h4> <div class="pull-right"> <%= link_to 'new meeting',new_project_meeting_path(project_id: @project.id)  %></div>
    <%= render   'meetings/list'  ,meetings: @project.meetings %>
    </div>
</section>
<section id="log" class="three">
  <div class="container">
    <h4>Log</h4> <div class="pull-right"> <%= link_to 'new log',new_project_log_path(project_id: @project.id)  %></div>
    <%= render   'logs/list'  ,logs: @project.logs %>
  </div>
</section>
