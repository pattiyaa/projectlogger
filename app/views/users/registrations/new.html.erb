<div class="container">
<h2>Sign up</h2>

<%= semantic_form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
  <div class="form-inputs">
    <br/>
    <%= f.input :name %>
    <%= f.input :title %>
    <%= f.input :telephone %>
    <%= f.input :image ,:label =>"Photo",:as =>"file",:image_preview => true%>
    <%= f.input :email,as: :email, required: true, autofocus: true %>
    <%= f.input :password,as: :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>

  </div>

  <div class="form-actions">
    <%= f.submit :label => "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>