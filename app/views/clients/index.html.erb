<div class="container mt-3">

<div class="pull-right">
<%= link_to 'New Customer', new_client_path %>
</div>
<div class="table-responsive">
<table class="table table-hover table-sm ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Details</th>
      
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td class="col-sm-6"><%= client.name %></td>
        <td>
          <dl class="row">
            <dt class="col-sm-4">Contact Person</dt>
            <dd class="col-sm-8"><%= client.contactperson %></dd>
            <dt class="col-sm-4">telephone:</dt>
            <dd class="col-sm-8"><%= client.telephone %></dd>
            <dt class="col-sm-4">email:</dt>
            <dd class="col-sm-8"><%= client.email %></dd>
            <dt class="col-sm-4">address:</dt>
            <dd class="col-sm-8"><%= client.address %></dd>
          </dl>
          
            
        </td>
        
        <td>
         
          <div><%= link_to 'Edit', edit_client_path(client) %></div>
          <div><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>


